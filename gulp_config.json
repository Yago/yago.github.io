{
  "app": {
    "env": "dev",
    "basedir": "public",
    "ghpages": "public"
  },
  "vendors": {
    "css": [
      "node_modules/prismjs/themes/prism-coy.css",
      "node_modules/prismjs/plugins/line-numbers/prism-line-numbers.css"
    ],
    "js": [
      "node_modules/prismjs/prism.js",
      "node_modules/prismjs/plugins/line-numbers/prism-line-numbers.js"
    ],
    "fonts": [
      "assets/fonts/*"
    ],
    "polyfills": [
      "node_modules/html5shiv/dist/html5shiv.js",
      "node_modules/respond.js/dest/respond.src.js"
    ]
  },
  "images": [
    "assets/img/**/*"
  ],
  "svg": [
    "assets/svg/**/*"
  ],
  "tasks":  "./tasks/",
  "assets": "assets/",
  "content": "content/",
  "fonts": "../personnal-fonts/",
  "iconsFontName": "icon",
  "build": "public/",
  "browsers": ["last 2 versions", "safari 5", "ie 8", "ie 9", "ff 27", "opera 12.1"],
  "metalsmith": {
    "plugins": {
      "prism": {
        "lineNumbers": true
      },
      "permalinks": {
        "date": "YYYY",
        "pattern": ":collection/:title"
      },
      "collections": {
        "posts": {
          "sortBy": "date",
          "reverse": true
        },
        "projects": {
          "sortBy": "date",
          "reverse": true
        },
        "oldies": {
          "sortBy": "date",
          "reverse": true
        }
      },
      "layouts": {
        "engine": "swig",
        "default": "default.swig",
        "directory": "assets/templates",
        "rename": true
      },
      "pagination": {
        "collections.posts": {
          "perPage": 10,
          "layout": "base.swig",
          "path": "posts/:num/index.html"
        }
      }
    }
  }
}
