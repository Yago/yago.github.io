{
  "app": {
    "env": "dev",
    "basedir": "public",
    "ghpages": "public"
  },
  "vendors": {
    "css": [
      "node_modules/prismjs/themes/prism-coy.css",
      "node_modules/prismjs/plugins/line-numbers/prism-line-numbers.css",
      "node_modules/photoswipe/dist/photoswipe.css",
      "node_modules/photoswipe/dist/default-skin/default-skin.css"
    ],
    "headjs": [
      "node_modules/fg-loadcss/src/loadCSS.js",
      "node_modules/fg-loadcss/src/cssrelpreload.js",
      "node_modules/fg-loadjs/loadJS.js"
    ],
    "js": [
      "node_modules/smoothstate/src/jquery.smoothState.js"
    ],
    "fonts": [
      "assets/fonts/*"
    ],
    "polyfills": [
      "node_modules/html5shiv/dist/html5shiv.js",
      "node_modules/respond.js/dest/respond.src.js"
    ]
  },
  "images": [
    "assets/img/**/*"
  ],
  "emojis": [
    "node_modules/emojify.js/dist/images/basic/**/*"
  ],
  "svg": [
    "assets/svg/**/*"
  ],
  "tasks":  "./tasks/",
  "assets": "assets/",
  "content": "content/",
  "fonts": "../personnal-fonts/",
  "iconsFontName": "icon",
  "build": "public/",
  "browsers": ["last 2 versions"],
  "singles": [
    {
      "source": "CNAME",
      "destination": "public/"
    },
    {
      "source": "./node_modules/photoswipe/dist/default-skin/default-skin.png",
      "destination": "public/css/"
    },
    {
      "source": "./node_modules/emojify.js/dist/images/basic/**.*",
      "destination": "public/img/emojis/"
    }
  ],
  "metalsmith": {
    "assets": "node_modules/toolbox-utils/styleguide/",
    "dist": "public/",
    "plugins": {
      "prism": {
        "lineNumbers": true
      },
      "permalinks": {
        "date": "YYYY",
        "pattern": ":collection/:title",
        "linksets": [{
          "match": { "collection": "posts" },
          "pattern": "blog/:title"
        }]
      },
      "collections": {
        "posts": {
          "sortBy": "date",
          "reverse": true
        },
        "projects": {
          "sortBy": "date",
          "reverse": true
        },
        "oldies": {
          "sortBy": "date",
          "reverse": true
        }
      },
      "layouts": {
        "engine": "swig",
        "default": "default.swig",
        "directory": "assets/templates",
        "rename": true
      },
      "emojify": {
        "img_dir": "/img/emojis",
        "ignore_emoticons": false
      },
      "pagination": {
        "collections.posts": {
          "perPage": 10,
          "layout": "blog.swig",
          "path": "blog/:num/index.html"
        }
      }
    }
  }
}
